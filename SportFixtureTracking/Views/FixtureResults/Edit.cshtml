@model SportFixtureTracking.Models.FixtureResult

@{
    ViewData["Title"] = "Edit";
}

<div class="d-flex justify-content-center align-items-center h-100">
    <h1 class="mb-3" style="color:aliceblue">Editing @Model.Fixture.HomeTeam.TeamName - @Model.Fixture.AwayTeam.TeamName Result</h1>

</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ResultId" />
            
            <div class="form-group">
                <label asp-for="HomeTeamScore" class="control-label"style="color:aliceblue;text-align:center">Home Team Score</label>
                <input asp-for="HomeTeamScore" class="form-control" />
                <span asp-validation-for="HomeTeamScore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AwayTeamScore" class="control-label" style="color:aliceblue;text-align:center">Away Team Score</label>
                <input asp-for="AwayTeamScore" class="form-control" />
                <span asp-validation-for="AwayTeamScore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WinnerTeamId" class="control-label" style="color:aliceblue;text-align:center">Winner Team</label>
                <select asp-for="WinnerTeamId" class="form-control" asp-items="ViewBag.WinnerTeamId"></select>
                <span asp-validation-for="WinnerTeamId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-info" />
                <a asp-action="Index">
                    <i class="fas fa-reply" style="color:coral"></i>
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
