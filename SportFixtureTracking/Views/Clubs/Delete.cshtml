@model SportFixtureTracking.Models.Club

@{
    ViewData["Title"] = "Delete";
}

<div class="d-flex justify-content-center align-items-center h-100">
    <h1 class="mb-3" style="color:aliceblue">Deleting @Model.ClubName </h1>

</div>

<div>
    <hr/>
    <dl class="row" >
        <dt class = "col-sm-2" style="color:aliceblue">
            Club Name 
        </dt>
        <dd class = "col-sm-10" style="color:#9d9d9d">
            @Html.DisplayFor(model => model.ClubName)
        </dd>
        <dt class = "col-sm-2" style="color:aliceblue">
            Club Description 
        </dt>
        <dd class = "col-sm-10" style="color: #9d9d9d ">
            @Html.DisplayFor(model => model.ClubDescription)
        </dd>
    </dl>
    
    <form asp-action="Delete" class="d-flex justify-content-center align-items-center h-100">
        <input type="hidden" asp-for="ClubId" />
        <input type="submit" value="Delete" class="btn btn-danger" style="margin-right:50px;"/>
        <a asp-action="Index">
            <i class="fas fa-reply" style="color:coral"></i>
        </a>
    </form>
</div>
