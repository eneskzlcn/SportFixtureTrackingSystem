@model SportFixtureTracking.Models.Club

@{
    ViewData["Title"] = "Edit";
}

<div class="d-flex justify-content-center align-items-center h-100">
    <h1 class="mb-3" style="color:aliceblue">Editing @Model.ClubName</h1>

</div>
<hr style="color:aliceblue" />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ClubId" />
            <div class="form-group">
                <label asp-for="ClubName" class="control-label" style="color:aliceblue">Name</label>
                <input asp-for="ClubName" class="form-control" />
                <span asp-validation-for="ClubName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClubDescription" class="control-label" style="color:aliceblue">Description</label>
                <input asp-for="ClubDescription" class="form-control" />
                <span asp-validation-for="ClubDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-info" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
