@model SportFixtureTracking.Models.Sport

@{
    ViewData["Title"] = "Edit";
}

<div class="d-flex justify-content-center align-items-center h-100">
    <h1 class="mb-3" style="color:aliceblue">Editing @Model.SportName</h1>

</div>
<hr/>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SportId" />
            <div class="form-group">
                <label asp-for="SportName" class="control-label" style="color:aliceblue;text-align:center">Name</label>
                <input asp-for="SportName" class="form-control" />
                <span asp-validation-for="SportName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SportDescription" class="control-label" style="color:aliceblue;text-align:center;">Description</label>
                <input asp-for="SportDescription" class="form-control" />
                <span asp-validation-for="SportDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RequiredTeamPlayerCount" class="control-label" style="color:aliceblue;text-align:center">Required Team Player Count</label>
                <input asp-for="RequiredTeamPlayerCount" class="form-control" />
                <span asp-validation-for="RequiredTeamPlayerCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-info mr-3" />
                <a asp-action="Index">
                    <i class="fas fa-reply" style="color:coral"></i>
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
