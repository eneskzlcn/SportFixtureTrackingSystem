@model SportFixtureTracking.Models.Fixture

@{
    ViewData["Title"] = "Edit";
}

<<div class="d-flex justify-content-center align-items-center h-100">
    <h1 class="mb-3" style="color:aliceblue">Editing @Model.HomeTeam.TeamName - @Model.AwayTeam.TeamName</h1>

</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FixtureId" />
            <div class="form-group">
                <label asp-for="FixtureDate" class="control-label" style="color:aliceblue;text-align:center">Date</label>
                <input asp-for="FixtureDate" class="form-control" />
                <span asp-validation-for="FixtureDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HomeTeamId" class="control-label" style="color:aliceblue;text-align:center">Home Team</label>
                <select asp-for="HomeTeamId" class="form-control" asp-items="ViewBag.HomeTeamId"></select>
                <span asp-validation-for="HomeTeamId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AwayTeamId" class="control-label" style="color:aliceblue;text-align:center">Away Team</label>
                <select asp-for="AwayTeamId" class="form-control" asp-items="ViewBag.AwayTeamId"></select>
                <span asp-validation-for="AwayTeamId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FixtureHome" class="control-label" style="color:aliceblue;text-align:center">Home</label>
                <input asp-for="FixtureHome" class="form-control" />
                <span asp-validation-for="FixtureHome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsFinished" class="control-label" style="color:aliceblue;text-align:center">Finished(Y or N)</label>
                <input asp-for="IsFinished" class="form-control" />
                <span asp-validation-for="IsFinished" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-info mr-3" />
                <a asp-action="Index">
                    <i class="fas fa-reply" style="color:coral"></i>
                </a>
            </div>

        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
