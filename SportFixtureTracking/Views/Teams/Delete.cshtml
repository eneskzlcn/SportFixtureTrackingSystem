@model SportFixtureTracking.Models.Team

@{
    ViewData["Title"] = "Delete";
}

<div class="d-flex justify-content-center align-items-center h-100">
    <h1 class="mb-3" style="color:aliceblue">Deleting @Model.TeamName </h1>

</div>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2" style="color:aliceblue;text-align:center">
            Name
        </dt>
        <dd class="col-sm-10" style="color: #9d9d9d;">
            @Html.DisplayFor(model => model.TeamName)
        </dd>
        <dt class="col-sm-2" style="color:aliceblue;text-align:center">
            Player Count
        </dt>
        <dd class="col-sm-10" style="color: #9d9d9d;">
            @Html.DisplayFor(model => model.PlayerCount)
        </dd>
        <dt class="col-sm-2" style="color:aliceblue;text-align:center">
            Club
        </dt>
        <dd class="col-sm-10" style="color: #9d9d9d;">
            @Html.DisplayFor(model => model.Club.ClubName)
        </dd>
        <dt class="col-sm-2" style="color:aliceblue;text-align:center">
            Sport
        </dt>
        <dd class="col-sm-10" style="color: #9d9d9d;">
            @Html.DisplayFor(model => model.Sport.SportName)
        </dd>
    </dl>

    <form asp-action="Delete" class="d-flex justify-content-center align-items-center h-100">
        <input type="hidden" asp-for="TeamId" />
        <input type="submit" value="Delete" class="btn btn-danger" style="margin-right:50px;" />
        <a asp-action="Index">
            <i class="fas fa-reply" style="color:coral"></i>
        </a>
    </form>
</div>
