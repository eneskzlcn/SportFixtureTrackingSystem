@model SportFixtureTracking.Models.Team
@{
    ViewData["Title"] = "Home Page";
    IEnumerable<Team> teams = ViewData["Teams"] as IEnumerable<Team>;
}

<div class="d-flex justify-content-center align-items-center h-100">
    <h1 class="mb-3" style="color:aliceblue">Welcome</h1>

</div>
<div class="container justify-content-center align-content-center mt-3">

    <div class="card text-center" style="background-color:#272727;color:aliceblue;margin-left:10px;margin-bottom:10px;">
        <div class="card-header">
            Nothing Is Impossible With Sport
        </div>
        <div class="card-body" style="background-color:#272727;">
            <h5 class="card-title">You can easily explore the site:</h5>

            <p>
                Look At
                <a asp-action="Index" asp-controller="Clubs" style="color: #c6ab19; padding-top: 4px; padding-left: 4px;">
                    Clubs
                </a>
                ,
            </p>

            <p>
                Look At
                <a asp-action="Index" asp-controller="Sports" style="color: #c6ab19;padding-left:4px;">
                    Sports
                </a>
                ,
            </p>

            <p>
                Look At
                <a asp-action="Index" asp-controller="Teams" style="color: #c6ab19; padding-left: 4px;">
                    Teams
                </a>
                ,
            </p>

            <p>
                Look At
                <a asp-action="Index" asp-controller="Fixtures" style="color: #c6ab19; padding-left: 4px;">
                    Fixtures
                </a>
                ,
            </p>
            <p>
                Look At
                <a asp-action="Index" asp-controller="FixtureResults" style="color: #c6ab19; padding-left: 4px;">
                    Fixture Results
                </a>
                ,
            </p>
            <p>
                Look At
                <a asp-action="Point" asp-controller="FixtureResults" style="color: #c6ab19; padding-left: 4px;">
                    Point Table
                </a>
            </p>
            <p>
                Find Your Favorite Team By Query:
            </p>
                    <form asp-action="Query">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="SportId" class="control-label" style="color:aliceblue;text-align:center">Sport</label>
                            <select asp-for="SportId" class="form-control" asp-items="ViewBag.Sports"></select>
                            <span asp-validation-for="SportId" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <input type="submit" value="Search" class="btn btn-info mr-3" />
                        </div>
                    </form>
                


        </div>

    </div>
</div>


